<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>onlineshop-demo</groupId>
    <artifactId>onlineshop-demo</artifactId>
    <version>1.0</version>
  </parent>
  <groupId>onlineshop-demo-ear</groupId>
  <artifactId>onlineshop-demo-ear</artifactId>
  <name>online shop EAR</name>
  <packaging>ear</packaging>
  <dependencies>
		<dependency>
			<groupId>com.onlineshop</groupId>
	  		<artifactId>onlineshop-demo-web</artifactId>
	  		<type>war</type>
	  		<scope>compile</scope>
	  		
	  	</dependency>
	  	<dependency>
			<groupId>com.onlineshop</groupId>
	  		<artifactId>onlineshop-demo-ejb</artifactId>
	  		<type>ejb</type>
	  		<scope>compile</scope>
	  	</dependency>
	  </dependencies>
	  <build>
		<finalName>${final.name}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<modules>
						<ejbModule>
							<groupId>com.onlineshop</groupId>
	  						<artifactId>onlineshop-demo-ejb</artifactId>
	  						<bundleFileName>onlineshop-demo-ejb.jar</bundleFileName>
	  					</ejbModule>
	  					
	  					<webModule>
	  						<groupId>com.onlineshop</groupId>
	  						<artifactId>onlineshop-demo-web</artifactId>
	  						<bundleFileName>onlineshop-demo.war</bundleFileName>
	  					</webModule>
	  				</modules>
	  			</configuration>
	  		</plugin>
		</plugins>
		</build>
</project>